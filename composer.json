{
  "name": "nixphp/client",
  "description": "NixPHP Client Plugin for simple http requests.",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "nixphp-plugin",
  "authors": [
    {
      "name": "Flo Knapp",
      "email": "office@florianknapp.de"
    }
  ],
  "autoload": {
    "psr-4": {
      "NixPHP\\Client\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.3",
    "nixphp/framework": "dev-main",
    "psr/http-client": "^1.0",
    "nyholm/psr7": "^1.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^12.1",
    "phpunit/php-code-coverage": "^12.1"
  },
  "scripts": {
    "test": "phpunit --colors=always"
  }
}
